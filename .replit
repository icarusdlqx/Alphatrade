modules = ["web", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "postgresql"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AlphaTrade Web Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AlphaTrade Scheduler"

[[workflows.workflow]]
name = "AlphaTrade Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python webapp.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "AlphaTrade Scheduler"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scheduler.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43911
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "-w", "1", "webapp:app"]
